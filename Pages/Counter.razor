@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount  Width ="@width"</p>

<button  class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;
    [Parameter]
    public float width
    {
        get { return _width; }
        set
        {
            _width = value;
            StateHasChanged();
        }
    }

    private float _width = 100;

    void IncrementCount()
    {
        width = 10000;
        currentCount++;
    }
}
